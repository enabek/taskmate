<div class="container">
	<div>
		<h4 class="center-align group-name"><%= @group.name %></h4>
	</div>

	<% if @group.tasks.length > 1 %>
	  <div id="container" style="width:100%; height:400px;" data-chart-info="<%= @data_for_chart.to_json %>"></div>
	<%end%>

	<div class="row">
		<ul class="collection">
				<% @group.activity.each do |event| %>
				<li class="collection-item avatar">
					<img src="<%=subject(event).image%>" class="circle" style="height:3.5em;width:3.5em;"/>
						<%= link_to subject(event).name, user_path(subject(event)) if subject(event) %>

						<%= verb(event) if verb(event) %>

						<%= link_to direct_obj(event), user_path(direct_obj(event)) if direct_obj(event) %>

						<%= preposition(event) if preposition(event) %>

						<%= link_to indirect_obj(event), user_path(indirect_obj(event)) if indirect_obj(event) %>
				</li>
				<% end %>
		</ul>
	</div>
</div>
